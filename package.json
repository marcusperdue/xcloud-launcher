{
  "name": "xcloud-launcher",
  "version": "1.0.0",
  "description": "Xbox Cloud Gaming launcher for macOS/Linux",
  "author": {
    "name": "Marcus Perdue",
    "email": "marcusperduee@gmail.com"
  },
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.xcloud.launcher",
    "productName": "XCloud Launcher",
    "files": [
      "**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
"linux": {
  "target": ["AppImage", "deb"],
  "category": "Game",
  "icon": "icon.png",
  "maintainer": "Marcus Perdue <marcusperduee@gmail.com>"
}
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.0.0"
  }
}
